<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Magnolia - Hotel site template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Favicons-->
    <link rel="shortcut icon" href="~/img/favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" type="image/x-icon" href="~/img/apple-touch-icon-57x57-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="72x72" href="~/img/apple-touch-icon-72x72-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="114x114" href="~/img/apple-touch-icon-114x114-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="144x144" href="~/img/apple-touch-icon-144x144-precomposed.png">


    <!--[if lt IE 9]>
      <script src="http://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="http://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <!-- Preloader -->
    <div id="preloader">
        <div id="status"><img src="~/img/logo.png" alt=""></div>
    </div>
    <!--  end Preloader -->

    <div id="wrapper">
        <div id="main">
            <div class="container body-content">
                <div id="logo"><img src="~/img/logo.png" alt=""></div>
                <div id="lang">
                    <ul>
                        <li><a href="#" id="active">EN</a></li>
                        <li><a href="#">ES</a></li>
                        <li><a href="#">FR</a></li>
                    </ul>
                    
                </div>
                @if (ViewBag.ErrMsg != null)
                {
                    @ViewBag.ErrMsg();
                }
                @RenderBody()
            </div>

            <nav>
                @if (GestHostel.utils.Utils.ConnectedUSer != null)
                {
                    <ul class="menu">
                        <li><a href="~/Home/Index"><img src="~/img/home.png" alt="Home" /> Home</a></li>
                        <li><a href="~/Rooms/Index"><img src="~/img/rooms.png" alt="Rooms" /> Rooms</a></li>
                        <li><a href="~/User/LogOut"><img src="~/img/login.png" alt="Log in" /> Log out</a></li>
                    </ul>
                }
                else
                {
                    <ul class="menu">
                        <li><a href="~/Home/Index"><img src="~/img/home.png" alt="Home" /> Home</a></li>
                        <li><a href="~/Rooms/Index"><img src="~/img/rooms.png" alt="Rooms" /> Rooms</a></li>
                        <li><a href="~/User/Index"><img src="~/img/login.png" alt="Log in" /> Log in</a></li>
                    </ul>
                }
                
                <ul id="contact_follow">
                    <li><a href="#"><span class="icon-facebook"></span></a></li>
                    <li><a href="#"><span class="icon-twitter"></span></a></li>
                    <li><a href="#"><span class="icon-googleplus"></span></a></li>
                </ul>
            </nav>

        </div>
    </div>
    <!-- End main -->

    

    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)

    
</body>
</html>
